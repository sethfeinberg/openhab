import org.openhab.core.library.types.*

rule "Wii Power Macro ON"
when
	Item WiiPowerMacro received command ON
then
  sendCommand(AV_TV_IP_Power, ON)
  sendCommand(AV_Denon_IP_MainPower, ON)
  sendCommand(AV_TV_IP_InputHDMI4, ON)
  sendCommand(AV_Denon_IP_AudioGame, ON)
  sendCommand(AV_Denon_IP_MainInputCBLSAT, ON)
end

rule "Wii Power Macro OFF"
when
	Item WiiPowerMacro received command OFF
then
  sendCommand(AV_TV_IP_Power, OFF)
  sendCommand(AV_Denon_IP_MainPower, OFF)
end
