import org.openhab.core.library.types.*

rule "HTPC Power Macro ON"
when
	Item HTPCMacro received command ON
then
  sendCommand(AV_HELPeR_IP_WoL, ON)
  sendCommand(AV_TV_IP_Power, ON)
  sendCommand(AV_Denon_IP_MainPower, ON)
  sendCommand(AV_TV_IP_InputHDMI4, ON)
  sendCommand(AV_Denon_IP_AudioDirect, ON)
  sendCommand(AV_Denon_IP_MainInputGame, ON)
end

rule "HTPC Power Macro OFF"
when
	Item HTPCMacro received command OFF
then
  sendCommand(AV_TV_IP_Power, OFF)
  sendCommand(AV_Denon_IP_MainPower, OFF)
end
