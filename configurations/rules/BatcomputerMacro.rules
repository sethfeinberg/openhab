import org.openhab.core.library.types.*

rule "Batcomputer Macro"
when
	Item BatcomputerPowerMacro received command ON
then
  sendCommand(AV_Batcomputer_IP_WoL, ON)
  sendCommand(AV_TV_IP_InputHDMI4, ON)
  sendCommand(AV_Denon_IP_AudioDirect, ON)
  sendCommand(AV_Denon_IP_MainInputMediaPlayer, ON)
end
